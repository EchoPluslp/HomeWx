<view>
    <!-- <view class="login-icon">
        <image class="login-img" src="../resource/images/dsp.jpg"></image>
    </view> -->
    <view class="login-from">
        <form bindsubmit='doReset'>
            <!--账号-->
            <view class="inputView">
                <image class="nameImage" src="../resource/images/username.png"></image>
                <label class="loginLabel">账号</label>
                <input name="username" class="inputText" value="{{valueUsername}}" placeholder="请输入手机号" bindinput="valueUsername"/>
                <button class='sendVer' bindtap='sendVer'>发送验证码</button>
            </view>
            
            <view class="line"></view>

            <!--验证码-->
            <view class="inputView">
                <image class="keyImage" src="../resource/images/password.png"></image>
                <label class="loginLabel">验证码</label>
                <input name="verification" disabled="{{ifInputVar}}" class="inputText"  placeholder="请输入验证码"/>
            </view>
              <view class="line"></view>
             <!--密码-->
            <view class="inputView">
                <image class="keyImage" src="../resource/images/password.png"></image>
                <label class="loginLabel">密码</label>
                <input name="password" class="inputText" password="true" placeholder="请输入密码"/>
            </view>
            <view class="line"></view>
             <!--检验密码-->
            <view class="inputView">
                <image class="keyImage" src="../resource/images/password.png"></image>
                <label class="loginLabel">密码</label>
                <input name="passwordAgain" class="inputText" password="true" placeholder="请重新输入密码"/>
            </view>
            <view class="line"></view>

            <!--按钮-->
            <view>
                <button class="loginBtn" type="primary" form-type='submit'>重置密码</button>
            </view>

            <view>
                <button class="goLoginBtn" type="warn" bindtap="goLoginPage">返回登录</button>
            </view>
        </form>
    </view>
</view>